if(session.user)
{
    if(mark === 'unchecked')
    {
    %>
        <form method="post" action="/users/<%= session.user.id %>/favourites/<%= quiz.id %>?_method=put">
            <input class="unchecked" type="submit" value="" />
        </form>
    <%
    }
